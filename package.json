{
  "name": "gestor-gastos-comunitarios",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "homepage": "https://enmaduro.github.io/administracion_proyectos",
  "main": "electron/main.js",
  "scripts": {
    "dev": "npm run electron:dev",
    "vite:dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "electron": "wait-on tcp:5173 && cross-env NODE_ENV=development electron .",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run vite:dev\" \"npm run electron\"",
    "electron:build": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.enrique.gastoscomunitarios",
    "productName": "Gestor de Gastos Comunitarios",
    "directories": {
      "output": "dist-electron"
    },
    "extraResources": [
      {
        "from": "build/icon.ico",
        "to": "build/icon.ico"
      }
    ],
    "files": [
      "dist/**/*",
      "electron/**/*",
      "build/icon.ico"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Gestor de Gastos Comunitarios"
    }
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "file-saver": "^2.0.5",
    "pdfjs-dist": "^5.4.449",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tesseract.js": "^7.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/file-saver": "^2.0.7",
    "@types/node": "^24.10.0",
    "@types/pdfjs-dist": "^2.10.377",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vercel/node": "^5.5.16",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "gh-pages": "^5.0.0",
    "postcss": "^8.4.32",
    "tailwindcss": "3.4.17",
    "typescript": "^4.9.3",
    "vite": "^7.2.2",
    "wait-on": "^9.0.3"
  },
  "description": "Una aplicación web progresiva (PWA) moderna, intuitiva y potente, diseñada para simplificar la gestión financiera de proyectos comunitarios.",
  "author": "Enrique Maduro",
  "license": "ISC"
}